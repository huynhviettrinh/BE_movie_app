<div class="mt-4 mr-4 ml-4">
    <a href="/managerMovie/managerEpisode?movieId={{movieId}}&categoryId={{categoryId}}&name={{name}}">Back</a>
    <h1>{{name}}</h1>

    <form action="/managerMovie/moreInfor" method="post">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Movie Id</label>
                <input type="text" class="form-control" value="{{movieId}}" name="movieId" disabled>
            </div>

            <div class="form-group col-md-4">
                <label>Category id</label>
                <input type="number" min="0" class="form-control" value="{{categoryId}}" name="categoryId" disabled>
            </div>

            <div class="form-group col-md-4">
                <label>SeriesNo</label>
                <input type="text" class="form-control" value="{{seriesNo}}" name="seriesNo" disabled>
            </div>


            <input type="text" class="form-control" value="{{movieId}}" name="movieId" hidden>
            <input type="number" min="0" class="form-control" value="{{categoryId}}" name="categoryId" hidden>
            <input type="text" class="form-control" value="{{seriesNo}}" name="seriesNo" hidden>
            <input type="text" class="form-control" value="sub" name="type" hidden>

            <input type="text" class="form-control" value="{{name}}" name="name" hidden>

        </div>

        <h3 class="mt-4  mb-4">Add subtitles movie</h3>

        <div class="form-row">

            <div class="form-group col-md-2">
                <label>Episode Id</label>
                <input type="text" class="form-control" placeholder="Episode Id" name="episodeId" autocomplete="off"
                    value="{{episodeId}}" disabled>
                <input type="text" class="form-control" value="{{episodeId}}" name="episodeId" hidden>

            </div>
            <div class="form-group col-md-10">
                <label>Subtitle Url</label>
                <input type="text" class="form-control" placeholder="Media Url" name="subtitlingUrl" autocomplete="off"
                    required>
            </div>

            <div class="form-group">
                <label>Language</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="language" id="exampleRadios1"
                        value="Tiếng Việt,vi" required>
                    <label class="form-check-label" for="exampleRadios1">
                        Tiếng Việt
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="language" id="exampleRadios2" value="English,en"
                        required>
                    <label class="form-check-label" for="exampleRadios2">
                        English
                    </label>
                </div>
            </div>


        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>